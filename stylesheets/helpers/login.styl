div.login
  height: 100vh
  text-align: center !important
  -webkit-box-align: center
  -webkit-box-pack: center
  justify-content:center
  background-color: #f5f5f5;
  padding-top: 40px
  div.login-logo
    display: block
  div.login-footer
    display: block
  form.login-form:focus
    z-index: 2
  form.login-form
    width: 100%
    max-width: 330px
    padding: 15px
    margin: 0 auto
    #EMAIL
      margin-bottom: -1px
      border-bottom-right-radius: 0
      border-bottom-left-radius: 0
    #PASSWORD
      margin-bottom: 10px
      border-top-right-radius: 0
      border-top-left-radius: 0
    input.input
      border: 1px solid #ced4da
      border-radius: .25rem
      width: 100%
      line-height: 1.5
      color:#495057
      font-size: 16px
      padding: 10px
      height: auto
    input.input:focus
      outline: 0
      background-color: #fff
      border-color: #80bdff
      box-shadow: 0 0 0 .2rem rgba(0,123,255,.25)
